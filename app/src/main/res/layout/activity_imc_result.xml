<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImcResult">

    <TextView
        android:id="@+id/titulo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado IMC"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/nome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/imc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/categoria_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imc_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/calcular_gasto_calorico_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Gasto calÃ³rico"
        android:textSize="20sp"
        android:padding="15dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@+id/categoria_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/voltar_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="20sp"
        android:padding="15dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@+id/calcular_gasto_calorico_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>