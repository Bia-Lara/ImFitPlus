<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumoSaude">

    <include
        android:id="@+id/toolbar_in"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_im_fit_plus"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_in"
        />

    <TextView
        android:id="@+id/titulo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumo da Saúde"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <TextView
        android:id="@+id/nome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/imc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/nome_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/categoria_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="categoria"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/imc_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/peso_ideal_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso Ideal"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/categoria_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/gasto_calorico_diario_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gasto calórico diario"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/peso_ideal_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/recomendacao_agua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendação de Ingestao de água"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/gasto_calorico_diario_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>