<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textStyle="bold"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginVertical="8dp" />

    <TextView
        android:id="@+id/imc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC: 00.0"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/categoria_imc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria: Normal"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tmb_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TMB: 1800 kcal"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/peso_ideal_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peso ideal: 70 kg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data: 01/12/2025"
        android:textSize="14sp"
        android:layout_marginTop="6dp" />

</LinearLayout>